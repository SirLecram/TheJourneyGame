<Window x:Class="TheJourneyGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheJourneyGame"
        mc:Ignorable="d"
        Title="The Journey" MinHeight="650" MinWidth="1150" WindowStyle="ThreeDBorderWindow" 
        WindowStartupLocation="CenterScreen" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="4.5*"/>
            <RowDefinition/>
            <RowDefinition Height="1.3*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Canvas Name="playArea" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" >
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF2C5F21" Offset="0"/>
                    <GradientStop Color="#FF4BBD31" Offset="1"/>
                </LinearGradientBrush>
            </Canvas.Background>
            <Canvas.Children>
             <!--   <Image Name="playerImage" Source="kwadrat.png" 
                       Canvas.Left="{Binding PlayerXPosition, Mode=OneWay}"
                       Canvas.Bottom="{Binding PlayerYPosition, Mode=OneWay}"/> -->
            </Canvas.Children>
            
        </Canvas>
        
        <Label Name="actualPos" Grid.Row="1" Grid.Column="2" Content="{Binding PlayerLocation, Mode=OneWay}"
               HorizontalAlignment="Right" Margin="8"/>
        <Button Grid.Row="3" Content="TAKEKSKA" Grid.ColumnSpan="4"/>
    <!--    <Button Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" 
                Content="Napis duza czcionka" FontSize="50"/> -->
    </Grid>
</Window>
